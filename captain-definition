{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:18.20-alpine",
    "RUN npm install -g pnpm",
    "WORKDIR /usr/src/app",
    "COPY package.json pnpm-lock.yaml* ./",
    "RUN pnpm install --frozen-lockfile",
    "COPY . .",
    "RUN pnpm build",
    "ENV NODE_ENV=production",
    "ENV PORT=3000",
    "EXPOSE 3000",
    "CMD [\"pnpm\", \"start\"]"
  ]
}